{
    "actorSpecification": 1,
    "name": "eprel-product-data-scraper",
    "title": "EPREL Product Energy Label Scraper",
    "description": "Extracts detailed energy efficiency data, product sheets (PIS), and energy labels from the official EU EPREL database.",
    "version": "0.1",
    "buildTag": "latest",
    "dockerfile": "./Dockerfile",
    "input": "./INPUT_SCHEMA.json",
    "readme": "./README.md",
    "minMemoryMbytes": 2048,
    "maxMemoryMbytes": 4096,
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "EPREL Product Data",
            "description": "Energy efficiency data extracted from the EU EPREL database",
            "views": {
                "overview": {
                    "title": "Overview",
                    "description": "Product energy efficiency information with technical specifications",
                    "transformation": {
                        "fields": [
                            "brand",
                            "modelIdentifier",
                            "energyClass",
                            "sourceUrl",
                            "specifications",
                            "scrapedAt"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "brand": {
                                "label": "Brand",
                                "format": "text"
                            },
                            "modelIdentifier": {
                                "label": "Model ID",
                                "format": "text"
                            },
                            "energyClass": {
                                "label": "Energy Class",
                                "format": "text"
                            },
                            "sourceUrl": {
                                "label": "Product Link",
                                "format": "link"
                            },
                            "specifications": {
                                "label": "Specifications",
                                "format": "object"
                            },
                            "scrapedAt": {
                                "label": "Scraped At",
                                "format": "date"
                            }
                        }
                    }
                }
            }
        }
    }
}